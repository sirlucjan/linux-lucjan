+	case Opt_noverbose:
+		fallthrough;
+	case Opt_diropq:
+		break;
+	default:
+		opt->type = token;
+		break;
+	}
+	opt++;
+	if (unlikely(opt > a->opt_tail)) {
+		err = -E2BIG;
+		opt--;
+	}
+	opt->type = Opt_tail;
+	a->opt = opt;
+
+out:
+	return err;
