+		err = au_fsctx_parse_do_add(fc, opt, p, /*len*/0, bindex);
+		AuTraceErr(err);
+		if (unlikely(err))
+			break;
+		bindex++;
+		opt++;
+		if (unlikely(opt > a->opt_tail)) {
